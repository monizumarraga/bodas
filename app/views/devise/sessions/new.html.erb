<div class="signBox">
  <div class="signBoxDiv">
    <h2 class="signBoxTitle">Accede</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "fieldBox" %>
      </div>
    
      <div class="field">
        <%= f.label "ConstraseÃ±a" %><br />
        <%= f.password_field :password, autocomplete: "off", class: "fieldBox" %>
      </div>
    
      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>
    
      <div class="actions">
        <%= f.submit "Log in", class:"btn btn-light center" %>
      </div>
    <% end %>
  </div>
</div>
<div class="connectLinks">
  <%= render "devise/shared/links" %>
</div>