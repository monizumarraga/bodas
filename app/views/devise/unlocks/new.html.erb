<div class="container">
  <div>
    <h2 class="containerTitle">Reenvío de instrucciones de desbloqueo</h2>
    <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
      <%= devise_error_messages! %>
    
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "fieldBox" %>
      </div>
    
      <div class="actions">
        <%= f.submit "Reenvío", class:"btn btn-light center" %>
      </div>
    <% end %>
  </div>
</div>
<div class="connectLinks">
  <%= render "devise/shared/links" %>
</div>