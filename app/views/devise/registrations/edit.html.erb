<div class="signBox">
  <div class="signBoxDiv">
    <h2 class="signBoxTitle">Editar <%= resource_name.to_s.humanize %></h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>
    
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "fieldBox" %>
      </div>
    
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Esperando confirmación de: <%= resource.unconfirmed_email %></div>
      <% end %>
    
      <div class="field">
        <%= f.label "Constraseña" %> <i>(Deja en blanco si no quieres cambiarla)</i><br />
        <%= f.password_field :password, autocomplete: "off", class: "fieldBox" %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>
    
      <div class="field">
        <%= f.label "Consfirmación contraseña" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "fieldBox" %>
      </div>
    
      <div class="field">
        <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
        <%= f.password_field :current_password, autocomplete: "off", class: "fieldBox" %>
      </div>
    
      <div class="actions">
        <%= f.submit "Actualizar", class:"btn btn-light center" %>
      </div>
    <% end %>
  </div>
</div>
<div class="connectLinks">
  <h3>Cancelar cuenta</h3>
  <p>¿Descontento? <%= button_to "Cancelar mi cuenta", registration_path(resource_name), data: { confirm: "¿Seguro?" }, method: :delete %></p>
  <%= link_to "Atrás", :back %>
</div>



