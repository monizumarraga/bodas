<div class="infoBox">
  <div class="infoBoxDiv">
    <h2 class="infoBoxTitle"><%- model_class = Image -%></h2>
        <div class="page-header">
            <h2 class="infoBoxTitle"><%=t '.title', :default => model_class.model_name.human.titleize %></h2>
            </div>
            <dl class="dl-horizontal">
            <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
            <dd><%= @image.name %></dd>
            <dt></dt>
            <dd><%= image_tag(@image.picture.url, size: "300x300") if @image.picture? %></dd>
            </dl>
        </div>
    </div>
<div class="connectLinks">
<%= link_to t('.back', :default => t("helpers.links.back")),
              images_path, :class => 'btn btn-default'  %>
              
<% if user_signed_in? && (current_user.id==@image.user_id || current_user.admin?)  %>
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_image_path(@image), :class => 'btn btn-default' %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              image_path(@image),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => '¿Estás seguro?')) },
              :class => 'btn btn-danger' %>
<% end%>
</div>


